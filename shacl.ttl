@prefix :         <http://fairdatapoint.org/> .
@prefix dash:     <http://datashapes.org/dash#> .
@prefix dcat:     <http://www.w3.org/ns/dcat#> .
@prefix dcterms:      <http://purl.org/dc/terms/> .
@prefix sh:       <http://www.w3.org/ns/shacl#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .
@prefix alm:      <http://purl.org/almescore> .
@prefix sdo:      <https://schema.org/docs/schemas.html> .
@prefix freq:     <http://purl.org/cld/freq/> .
@prefix foaf:     <http://xmlns.com/foaf/0.1/>.

:ResourceShape a sh:NodeShape ;
  sh:targetClass dcat:Resource ;
  sh:property [
    sh:path dcterms:title ;
    sh:name "Título";
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount  1 ;
    dash:editor dash:TextFieldEditor ;
  ], [
    sh:path dcterms:description ;
    sh:name "Descrição";
    sh:nodeKind sh:Literal ;
    sh:maxCount 1 ;
    dash:editor dash:TextAreaEditor ;
  ], [
    sh:path dcterms:publisher ;
    sh:name "Editor";
    sh:node :AgentShape ;
    dash:editor dash:BlankNodeEditor ;
  ], [
    sh:path dcterms:creator;
    sh:name "Criador";
    sh:node :AgentShape ;
    sh:minCount 1 ;
    dash:editor dash:BlankNodeEditor ;
  ], [
    sh:path dcterms:modified ;
    sh:name "Última atualização" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    dash:editor dash:DatePickerEditor ;
    dash:viewer dash:LiteralViewer ;
   ], [
    sh:path dcterms:hasVersion ;
    sh:name "Versão" ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
  ], [
    sh:path dcterms:language ;
    sh:name "Idioma";
    sh:nodeKind sh:Literal ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [
    sh:path dcterms:license ;
    sh:name "Licença";
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [
    sh:path dcterms:rights ;
    sh:name "Direitos";
    sh:nodeKind sh:Literal ;
    sh:maxCount 1 ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
  ] .

:AgentShape a sh:NodeShape ;
  sh:targetClass foaf:Agent ;
  sh:property [
    sh:path foaf:name;
    sh:name "Nome" ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount  1 ;
    dash:editor dash:TextFieldEditor ;
  ], [
    sh:path foaf:mbox ;
    sh:name "Email";
    sh:nodeKind sh:Literal ;
    dash:editor dash:TextFieldEditor ;
    sh:maxCount 1;
  ], [
    sh:path foaf:homepage ;
    sh:name "Website";
    sh:nodeKind sh:IRI;
    sh:maxCount 1;
    dash:editor dash:URIEditor ;
  ] .

:DatasetShape a sh:NodeShape ;
  sh:targetClass dcat:Dataset ;
  sh:property [
    sh:path alm:productGroup ;
    sh:name "Grupo do Produto" ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [
    sh:path alm:productType ;
    sh:name "Tipo do Produto" ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [
    sh:path sdo:referenceQuantity ;
    sh:name "Quantidade de referência" ;
    sh:maxCount 1 ;
    sh:nodeKind sh:Literal ;
    dash:editor dash:TextFieldEditor ;
  ], [
    sh:path dcterms:accrualPeriodicity ;
    sh:name "Frequência" ;
    sh:nodeKind sh:IRI ;
    sh:in (freq:daily freq:monthly freq:weekly freq:biweekly freq:irregular freq:continuous) ;
    sh:minCount 1 ;
    dash:editor dash:EnumSelectEditor ;
    dash:viewer dash:LabelViewer ;
  ], [
    sh:path sdo:location ;
    sh:name "Local" ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:nodeKind sh:IRI ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [
    sh:path sdo:currency ;
    sh:name "Moeda" ;
    sh:nodeKind sh:Literal ;
    dash:editor dash:TextFieldEditor ;
  ], [
    sh:path sdo:startDate ;
    sh:name "Data de início" ;
    sh:datatype xsd:dateTime ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:DatePickerEditor ;
    dash:viewer dash:LiteralViewer ;
  ], [
    sh:path sdo:endDate ;
    sh:name "Data de encerramento" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    dash:editor dash:DatePickerEditor ;
    dash:viewer dash:LiteralViewer ;
  ], [
    sh:path alm:statisticalMethod ;
    sh:name "Método estatístico" ;
    sh:nodeKind sh:IRI ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [
    sh:path alm:theme ;
    sh:name "Tema" ;
    sh:nodeKind sh:IRI ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [
    sh:path dcat:accessURL ;
    sh:name "URL de acesso" ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
    ] .
